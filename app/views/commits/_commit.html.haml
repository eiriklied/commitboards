%li{data:{commit_sha: commit.sha}}
  .commit
    .row
      .author #{commit.user.name} on #{link_to_project(commit)} #{time_ago_in_words commit.committed_at} ago
    .row
      .image
        = link_to board_commit_path(commit.board, commit), data: {open_card: true} do
          = image_tag commit.image.url
    .row
      .meta
        - if logged_in?
          = link_to board_commit_path(commit.board, commit), data: {open_card: true} do
            %span.comments-count= commit.comments_count
            %span.glyphicon.glyphicon-comment
        - else
          %span.comments-count= commit.comments_count
          %span.glyphicon.glyphicon-comment

      .message
        = link_to_commit_with_message commit
