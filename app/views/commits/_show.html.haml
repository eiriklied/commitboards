%span.glyphicon.glyphicon-remove.close-card.js-close-card
.card-header
  .h3= link_to_commit_with_message @commit

= image_tag @commit.image.url, class: 'card-image'

%ul.comments
  = render @commit.comments

= form_for Comment.new, remote: true, url: board_commit_comments_path(@board, @commit) do |f|
  .new-comment
    = avatar_for current_user
    = f.text_area :body, class: 'input-small js-comment-body', placeholder: 'Say what?'
    = f.submit 'Comment!', id: 'add-comment', class: 'btn btn-primary btn-small'
