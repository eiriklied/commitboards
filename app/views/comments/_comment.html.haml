%li.comment
  = link_to comment.user.github_url, rel: 'new', target: '_blank' do
    = avatar_for comment.user
  .comment-meta
    = link_to comment.user.name, comment.user.github_url, rel: 'new', target: '_blank'
    #{time_ago_in_words comment.updated_at} ago
  .comment-body
    = simple_format emojify(comment.body)
